{
  "name": "bun-react",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "BUN_ENV=production bun index.ts",
    "dev": "BUN_ENV=development bun --hot index.ts --inspect",
    "watch": "vite",
    "dist": "bun type-check && vite build",
    "type-check": "tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@elysiajs/static": "^0.8.0",
    "elysia": "^0.7.30",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.16",
    "bun-types": "latest",
    "eslint": "^8.56.0",
    "eslint-config-pfy": "^1.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "vite-tsconfig-paths": "^4.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
